<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/ivCommentUserProfilePic"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:adjustViewBounds="true"
        android:contentDescription="User Profile Pic"
        android:padding="5dp"
        android:scaleType="fitXY" />

    <TextView
        android:id="@+id/tvCommentUserName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/ivCommentUserProfilePic"
        android:text="Comment Username"
        android:textColor="#42A5F5"
        android:textSize="12sp"
        android:textStyle="bold"
        android:typeface="sans" />

    <TextView
        android:id="@+id/tvComment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/ivCommentUserProfilePic"
        android:layout_below="@+id/tvCommentUserName"
        android:padding="5dp"
        android:text="Comment"
        android:textSize="12sp" />

    <TextView
        android:id="@+id/tvCommentedTimeStamp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:drawablePadding="8dp"
        android:ellipsize="end"
        android:gravity="center"
        android:text="commented time stamp"
        android:textSize="10sp" />

</RelativeLayout>