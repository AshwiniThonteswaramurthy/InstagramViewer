<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/ivUserProfilePic"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:adjustViewBounds="true"
        android:contentDescription="User Profile Pic"
        android:padding="5dp"
        android:scaleType="fitXY" />

    <TextView
        android:id="@+id/tvUserName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/ivUserProfilePic"
        android:padding="5dp"
        android:text="User name"
        android:textColor="#42A5F5"
        android:textSize="14sp"
        android:textStyle="bold"
        android:typeface="sans" />

    <TextView
        android:id="@+id/tvCaption"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvUserName"
        android:layout_toRightOf="@+id/ivUserProfilePic"
        android:gravity="bottom"
        android:lines="1"
        android:text="Caption"
        android:textColor="#424242"
        android:textSize="12sp" />

    <ImageView
        android:id="@+id/ivPopularMedia"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvCaption"
        android:adjustViewBounds="true"
        android:contentDescription="Popular Image"
        android:padding="10dp"
        android:scaleType="fitXY" />

    <TextView
        android:id="@+id/tvTimeStamp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_margin="5dp"
        android:drawableLeft="@drawable/ic_sync_time3"
        android:drawablePadding="8dp"
        android:ellipsize="end"
        android:gravity="center"
        android:text="time stamp"
        android:textSize="12sp" />

    <TextView
        android:id="@+id/tvLikeCount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/ivPopularMedia"
        android:drawableLeft="@drawable/like_icon"
        android:drawablePadding="8dp"
        android:ellipsize="end"
        android:gravity="center"
        android:padding="5dp"
        android:text="Like Count"
        android:textColor="#42A5F5"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/tvCommentCount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/tvLikeCount"
        android:autoLink="all"
        android:linksClickable="true"
        android:padding="5dp"
        android:text="Comment Count"
        android:textSize="12sp" />

    <TextView
        android:id="@+id/tvFirstCommentUserName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/tvCommentCount"
        android:padding="5dp"
        android:text="Comment 1 Username"
        android:textColor="#42A5F5"
        android:textSize="12sp"
        android:textStyle="bold"
        android:typeface="sans" />

    <TextView
        android:id="@+id/tvFirstComment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvCommentCount"
        android:layout_toRightOf="@+id/tvFirstCommentUserName"
        android:padding="5dp"
        android:text="Comment 1"
        android:textSize="12sp" />

    <TextView
        android:id="@+id/tvSecondCommentUserName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/tvFirstComment"
        android:gravity="center_vertical"
        android:padding="5dp"
        android:text="Comment 2 Username"
        android:textColor="#42A5F5"
        android:textSize="12sp"
        android:textStyle="bold"
        android:typeface="sans" />

    <TextView
        android:id="@+id/tvSecondComment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvFirstComment"
        android:layout_toRightOf="@+id/tvSecondCommentUserName"
        android:padding="5dp"
        android:text="Comment 2"
        android:textSize="12sp" />

</RelativeLayout>